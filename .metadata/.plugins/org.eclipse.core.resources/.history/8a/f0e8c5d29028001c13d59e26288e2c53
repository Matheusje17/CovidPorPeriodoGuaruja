package performanceAnalyze;

import java.util.List;

import model.Obito;

public class QuickSort {
	public List<Obito> quickSort(List<Obito> obitos) {
		
		Obito esq = obitos.get(0);
		Obito dir = obitos.get(obitos.size() -1);
		
		if (esq.getQuantidade() < dir.getQuantidade()) {
			int j = separar(v, esq, dir);
			quicksort(v, esq, j-1);
			quicksort(v, j+1, dir);
			
		}
		
		
		
		return obitos;
		
	}
	private static int separar(List<Obito >obitos, Obito esq, Obito dir) {
		int i = esq+1;
		int j = dir;
		int pivo = v[esq];
		while (i <= j) {
			if(v[i] <= pivo) i++;
			else if(v[j] > pivo) j--;
			else if (i <= j) {
				trocar(v, i, j);
				i++;
				j--;
			}
		}
		trocar (v, esq, j);
		return j;
	}
	private static void trocar(int[] v, int i, int j) {
		int aux = v[i];
		v[i] = v[j];
		v[j] = aux;
		
	}
}
